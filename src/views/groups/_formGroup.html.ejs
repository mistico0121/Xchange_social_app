<div class="base bgcolor-0 round-1 container">
    <% if (locals.errors) { %>
        <div>
            You need to fix the following errors:
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>
    <form action="<%= submitGroupPath %>" method="post">
        <% if (!group.isNewRecord) { %>
            <input type="hidden" name="_method" value="patch" />
        <% } else { %>
            <input type="hidden" name="image_url" value="https://iic2513-groupimgs.s3.us-east-2.amazonaws.com/group_placeholder.png" />

            <% if (currentUser) { %>
                <input type="hidden" name="userId" value="<%= currentUser.id %>" />
            <% } %>

        <% } %>

        

        <div class="form-group row">
            <label class="form-label col-4" for="name">Nombre de Grupo</label>
            <div class="col-7">
                <input class="form-control-plaintext" type="text" name="name" value="<%= group.name %>" />
            </div>
        </div>
        <div class="form-group row">
            <label class="form-label col-3" for="description">Description</label>
            <div class="col-8">
                <textarea class="form-control-plaintext" type="text" name="description"><%= group.description %></textarea>
            </div>
        </div>

        

        <div >
            <% if (group.isNewRecord) { %>
                <input class="btn-primary btn" type="submit" name="create" value="Create" />
            <% } else { %>
                <input class="btn-primary btn" type="submit" name="update" value="Update" />
            <% } %>
        </div>
    </form>
</div>
