<div class="wrapper center">
  <div class = "form-field base bgcolor-0 round-1 container">


  <form action="<%= submitUserPath %>" method="post">
    <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>

      <div class="form-group">
        <input class="form-control-plaintext" type="text" name="username" id="username"
               placeholder="Username"  required /><br>
      </div>

      <div class="form-group">
        <input class="form-control-plaintext" type="text" name="name" id="name"
               placeholder="Name"  required /><br>
      </div>

      <div class="form-group">
        <input class="form-control-plaintext" type="email" name="email" id="email"
               placeholder="E-Mail " required /><br>
      </div>

      <div class="form-group">
        <input class="form-control-plaintext" type="address" name="address" id="address"
               placeholder="Address " required /><br>
      </div>

      <div class="form-group">
        <input class="form-control-plaintext" type="password" name="password"
               id="password" placeholder="Password " required/><br>
      </div>

      <div class="form-group">
        <input class="form-control-plaintext" type="text" name="phone" id="phone"
               placeholder="Phone Number " required/><br>
      </div>

      <div  class="field">
        <% if (user.isNewRecord) { %>
          <input type="hidden" name="image_url" value="https://iic2513-groupimgs.s3.us-east-2.amazonaws.com/default_avatar.png" />
          <input class="btn-primary btn" type="submit" name="create" value="Create" />
        <% } else { %>
          <input type="hidden" name="image_url" value="https://iic2513-groupimgs.s3.us-east-2.amazonaws.com/group_placeholder.png" />
          <input class="btn-primary btn" type="submit" name="update" value="Update" />
        <% } %>
      </div>



    </div>

    <div class="container signin">
      <p>Already have an account? <a href="/sessions/sign_in">Sign in</a>.</p>
    </div>
  </form>

  </div>
</div>
